<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        card:cardCornerRadius="3dp"

        android:layout_margin="7dp"
        android:layout_marginBottom="7dp"
        android:padding="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/linearlayout_contents"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/textview_number"
                            android:layout_marginLeft="1dp"
                            android:layout_width="1dp"
                            android:textSize="18sp"
                            android:textColor="#000000"
                            android:layout_weight="0.7"
                            android:layout_height="match_parent" />
                        <TextView
                            android:id="@+id/textview_word"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:textSize="18sp"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:layout_weight="6"/>

                    </LinearLayout>
                    <ImageView
                        android:id="@+id/imageview_news"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="4dp"
                        android:scaleType="centerCrop"
                        android:layout_weight="4"/>

                    <TextView
                        android:id="@+id/textview_newstitle"
                        android:layout_width="match_parent"
                        android:gravity="center_vertical"
                        android:textSize="15sp"
                        android:padding="5dp"
                        android:textColor="#191919"
                        android:layout_height="1dp"
                        android:layout_weight="1"/>
                </LinearLayout>
            </LinearLayout>
        <LinearLayout
            android:id="@+id/linearlayout_reply"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:padding="5dp"
            android:orientation="vertical"
            android:background="#F6F6F6"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textview_reply_name"
                    android:layout_weight="1.2"
                    android:layout_width="1dp"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:text="test"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/textview_reply_time"
                    android:layout_weight="1"
                    android:layout_width="1dp"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:text="1ts s"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/textview_reply_count1"
                    android:layout_weight="1.1"
                    android:layout_width="1dp"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:text="fel 1799"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/textview_reply_count2"
                    android:layout_weight="1.1"
                    android:layout_width="1dp"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:text="aaa4249"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/textview_reply_count3"
                    android:layout_weight="1"
                    android:layout_width="1dp"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:text="test"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <TextView
                android:id="@+id/textview_reply_text"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:textSize="14sp"
                android:text="test"
                android:ellipsize="end"
                android:textColor="#000000"
                android:layout_weight="3"/>
            <Button
                android:id="@+id/button_more_reply"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:text="더보기"
                android:textStyle="bold"
                android:padding="1dp"
                android:background="#F6F6F6"
                android:layout_weight="2"/>


        </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>
